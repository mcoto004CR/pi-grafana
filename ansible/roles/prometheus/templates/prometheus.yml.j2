global:
  scrape_interval:     30s
  evaluation_interval: 1m

scrape_configs:

  - job_name: 'prometheus'
    static_configs:
      - targets: [
          '{{ groups['main-raspberry'][0] }}:9090'
      ]

  - job_name: 'node_exporter'
    static_configs:
      - targets: [
{% for host in groups['all'] %}
          '{{ host }}:9100'{% if not loop.last %},{% endif %}
          
{% endfor %}
      ]
          
  - job_name: 'rpi_exporter'
    static_configs:
      - targets: [
{% for host in groups['all'] %}
          '{{ host }}:9243'{% if not loop.last %},{% endif %}

{% endfor %}
      ]
